# TezzaWorks Personalization Platform - Environment Variables
# Copy this file to .env and update the values

# Secret key for Flask sessions (generate a random string for production)
SECRET_KEY=your-secret-key-here-change-in-production

# Database URL (default: SQLite)
DATABASE_URL=sqlite:///tezzaworks.db

# Admin Email (for notifications)
ADMIN_EMAIL=admin@tezzaworks.com

# Company Information
COMPANY_NAME=TezzaWorks
COMPANY_EMAIL=info@tezzaworks.com
COMPANY_PHONE=(555) 123-4567

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=static/uploads
PDF_FOLDER=static/pdfs

# Flask Environment
FLASK_ENV=development  # Change to 'production' for production
FLASK_DEBUG=1          # Set to 0 for production
